<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="todo"
            type="codemakers.daggermvvm.data.model.Todo"/>
        <variable
            name="clickTodo"
            type="io.reactivex.subjects.Subject"/>
        <variable
            name="clickDelete"
            type="io.reactivex.subjects.Subject"/>
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/cardTodo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:onClick="@{()-> clickTodo.onNext(todo)}">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/todoName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    tools:text="Tarea1"
                    android:text='@{""+todo.title}'
                    style="@style/TextAppearance.AppCompat.Large"/>
                <ImageView
                    android:id="@+id/deleteTodo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:src="@drawable/ic_close"
                    android:onClick="@{()->clickDelete.onNext(todo)}"
                    android:contentDescription="@string/todoDeleted" />
            </LinearLayout>
            <TextView
                android:id="@+id/todoDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="12/10/2017"
                app:dateFormat='@{todo.date}'
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/todoDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text='@{""+todo.description}'
                style="@style/TextAppearance.AppCompat.Body1"
                tools:text="Descripcion 1"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</layout>